{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "noUnusedLocals": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["esnext"],
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "exclude": ["node_modules", "build"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
  ]
}
